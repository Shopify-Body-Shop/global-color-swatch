{% style %}
  {% for block in section.blocks %}
    {% if block.settings.flavor_id != blank %}
      .color--{{ block.settings.flavor_id | handle }}{
        background: {{ block.settings.color }};
        color: {{ block.settings.color }};
      }
    {% endif %}
  {% endfor %}
{% endstyle %}
{% schema %}
  {
    "name": "Color Swatch",
    "blocks":[
      {
        "type":"color",
        "name":"Color",
        "settings":[
          {
            "type":"text",
            "id":"color_id",
            "label":"Flavor name"
          },
          {
            "type":"color",
            "id":"color",
            "label":"color",
            "default":"#000000"
          }
        ]
      }
    ]
  }
{% endschema %}

{% stylesheet %}
{% endstylesheet %}